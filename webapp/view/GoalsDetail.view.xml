<mvc:View displayBlock="true"
    controllerName="myApp.controller.GoalsDetail"
    height="100%"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc">


    <Button icon="sap-icon://nav-back" press="onNavBack" tooltip="Volver" />
    <ScrollContainer
        height="95vh"
        vertical="true">
        <Table id="contentTable"
            growing="true"
            sticky="ColumnHeaders,HeaderToolbar"
            growingScrollToLoad="false"
            growingThreshold="10">
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="Contenido Detallado / {goalModel>/titleName}" />
                    <ToolbarSpacer />
                    <Button text="Guardar Masivo" press="onSave" icon="sap-icon://home" />

                </OverflowToolbar>
            </headerToolbar>
        </Table>
    </ScrollContainer>
</mvc:View>