<mvc:View
  controllerName="myApp.controller.Goals"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">

  <!-- Contenedor principal con flexibilidad -->
  <FlexBox direction="Column">
    
    <!-- Encabezado -->
    <Toolbar>
      <Title text="Metas ({goalModel>/goals/totalGoals})" />
      <ToolbarSpacer />
      <Button text="Importar Data" press="onOpenImportDialog" icon="sap-icon://home" />
    </Toolbar>

    <!-- Contenedor Scrollable a pantalla completa -->
    <ScrollContainer
      height="95vh"
      vertical="true">
      
      <!-- Tabla de Metas -->
      <Table id="idGoalsTable"
        growing="true"
        sticky="ColumnHeaders,HeaderToolbar"
        growingScrollToLoad="true"
        growingThreshold="10"
        items="{goalModel>/goals/goalHeaders}">
        <headerToolbar>
          <OverflowToolbar>
            <ToolbarSpacer />
            <SearchField search="onSearch" width="17.5rem" />
          </OverflowToolbar>
        </headerToolbar>
        <columns>
          <Column>
            <Text text="DescripciÃ³n" />
          </Column>
          <Column>
            <Text text="Estado" />
          </Column>
        </columns>
        <items>
          <ColumnListItem
            type="Navigation"
            press="onViewDetails"
            vAlign="Middle">
            <cells>
              <ObjectIdentifier text="{goalModel>description}" />
              <ObjectIdentifier text="{goalModel>status}" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </ScrollContainer>

  </FlexBox>
</mvc:View>
